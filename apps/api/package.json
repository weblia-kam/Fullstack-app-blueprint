{
  "name": "api",
  "private": true,
  "scripts": {
    "prebuild": "pnpm --filter @org/domain build && pnpm --filter @org/domain-adapters-prisma build",
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "openapi:emit": "cross-env EMIT_OPENAPI=1 ts-node src/main.ts",
    "lint": "eslint .",
    "test": "jest --config jest.config.ts --coverage --passWithNoTests",
    "test:watch": "jest --config jest.config.ts --watch",
    "test:contract": "jest --config test/contract/jest.contract.config.ts --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.1",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.1",
    "@nestjs/platform-express": "^10.4.1",
    "@nestjs/swagger": "^7.4.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.65.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.206.0",
    "@opentelemetry/instrumentation-http": "^0.206.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.206.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "@org/domain": "workspace:*",
    "@org/domain-adapters-prisma": "workspace:*",
    "@prisma/client": "^5.22.0",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "argon2": "^0.40.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "express-rate-limit": "^7.3.0",
    "helmet": "^7.1.0",
    "ipaddr.js": "^2.2.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.13",
    "rxjs": "^7.8.1",
    "pino": "^10.0.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.2",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.4.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.16.2",
    "@types/pino": "^7.0.5",
    "@types/pino-http": "^6.1.0",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "ajv": "^8.17.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.9.0",
    "jest": "^29.7.0",
    "jest-openapi": "^0.14.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}

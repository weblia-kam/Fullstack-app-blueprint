{
  "name": "api",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "openapi:emit": "cross-env EMIT_OPENAPI=1 ts-node src/main.ts",
    "lint": "eslint .",
    "test": "jest --config jest.config.ts --coverage --passWithNoTests",
    "test:watch": "jest --config jest.config.ts --watch",
    "test:contract": "jest --config test/contract/jest.contract.config.ts --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.1",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.1",
    "@nestjs/platform-express": "^10.4.1",
    "@nestjs/swagger": "^7.4.2",
    "helmet": "^7.1.0",
    "reflect-metadata": "^0.2.2",
    "zod": "^3.23.8",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "express-rate-limit": "^7.3.0",
    "jsonwebtoken": "^9.0.2",
    "argon2": "^0.40.3",
    "uuid": "^9.0.1",
    "@prisma/client": "^5.22.0",
    "class-validator": "^0.14.2",
    "class-transformer": "^0.5.1",
    "nodemailer": "^6.9.13",
    "@org/domain": "workspace:*",
    "@org/domain-adapters-prisma": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.16.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.9.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3",
    "@types/cookie-parser": "^1.4.6",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.21",
    "@types/uuid": "^9.0.7",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^2.0.16",
    "@nestjs/testing": "^10.4.5",
    "ajv": "^8.17.1",
    "jest": "^29.7.0",
    "jest-openapi": "^0.14.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5"
  }
}
